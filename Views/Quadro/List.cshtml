@model IEnumerable<MinhaArte.Models.QuadroModel>

    <div>
        <h2>Lista de todos os lanches</h2>
    </div>
    <hr />
<h3>@ViewBag.Total  @ViewBag.TotalQuadro </h3>
<hr />

    
<div class="container"
<div class="row"
@foreach(var lanche in Model)
{
    <div class=" col-sm-4 col-md-4 col-lg-4">
        <h4>@lanche.QuadroNome</h4>
        <p><img class="@lanche.ImagemUrl" class="img-fluid"></p>
        <h3>Preço : @lanche.Preco.ToString("c")</h3>        
    </div>
}
</div>
</div>